name: CI 
on: 
pull_request: 
branches: [ "main" ] 
jobs: 
build-and-test: 
runs-on: ubuntu-latest 
steps: - name: Checkout Code 
uses: actions/checkout@v4 - name: Setup Node.js Environment 
uses: actions/setup-node@v4 
with:  
node-version: "20" # Usar una versión LTS - name: Install Dependencies 
run: npm ci # Instalación limpia de dependencias - name: Run Unit Tests 
run: npm test --if-present # Ejecuta pruebas unitarias
